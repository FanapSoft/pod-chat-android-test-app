<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".application.ui.BlockOptionFragment">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColor="@color/grey"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Block" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Target Contact:"
        android:textColor="@color/grey_light"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTargetContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        tools:text="Farhad Kheirkhah" />


    <EditText
        android:id="@+id/etTargetField"
        android:layout_width="wrap_content"
        android:minWidth="140dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="enter value here"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        tools:text="fkheirkhah" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Target Field:"
        android:textColor="@color/grey_light"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/actionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:text="Block With:" />


    <android.support.design.button.MaterialButton
        android:id="@+id/btnWithUserId"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/grey"
        android:text="User Id"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/actionType"
        app:layout_constraintTop_toBottomOf="@+id/actionType"
        tools:targetApi="lollipop" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnWithCoreUserId"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:backgroundTint="@color/grey"
        android:text="Core User Id"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnWithUserId"
        app:layout_constraintTop_toTopOf="@+id/btnWithUserId"
        tools:targetApi="lollipop" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnWithUsername"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/grey"
        android:text="Username"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/btnWithUserId"
        app:layout_constraintTop_toBottomOf="@+id/btnWithUserId"
        tools:targetApi="lollipop" />


    <android.support.design.button.MaterialButton
        android:id="@+id/btnWithContactId"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="224dp"
        android:backgroundTint="@color/grey"
        android:text="Contact Id"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnWithUsername"
        app:layout_constraintEnd_toEndOf="@+id/btnWithCoreUserId"
        app:layout_constraintStart_toStartOf="@+id/actionType"
        app:layout_constraintTop_toTopOf="@+id/btnWithUsername"
        tools:targetApi="lollipop" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:width="120dp"
        android:backgroundTint="@color/grey_active"
        android:shadowColor="@color/blue_grey_active"
        android:shadowRadius="32dp"
        android:text="Cancel"
        android:textColor="@color/white"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/orange_active"
        tools:targetApi="lollipop" />


    <android.support.design.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="180dp"
        android:backgroundTint="@color/green_inactive"
        android:shadowColor="@color/blue_grey_active"
        android:shadowRadius="32dp"
        android:text="OK"
        android:textColor="@color/white"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toTopOf="@+id/btnCancel"
        app:rippleColor="@color/orange_active"
        tools:targetApi="lollipop" />


</android.support.constraint.ConstraintLayout>