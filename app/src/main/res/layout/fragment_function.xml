<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:background="@color/blue_bg_light"
        android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:background="@drawable/connect_button_shape"
                android:elevation="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/button_Connect"
                android:text="Connect"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/guideline3" tools:targetApi="lollipop"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView android:layout_width="61dp"
                  android:layout_height="26dp"
                  android:textSize="14sp"
                  android:text="SandBox"
                  android:gravity="center_vertical"
                  android:textColor="@color/colorAccent"
                  android:id="@+id/textView2"
                  app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
                  app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView" android:layout_marginEnd="48dp"
                  app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
                  app:layout_constraintVertical_bias="1.0"/>

        <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchCompat_sandBox"
                android:layout_height="27dp"
                android:layout_width="42dp"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/button_Connect" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginEnd="8dp"/>

        <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:text="connecting"
                android:id="@+id/textView_state"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView" android:layout_marginStart="12dp"
                app:layout_constraintEnd_toStartOf="@+id/AVLoadingIndicatorView" android:layout_marginEnd="8dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerV_funcFrag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                android:background="@color/blue_grey_inactive"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:id="@+id/guideline2"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.21"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:id="@+id/guideline3"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_begin="85dp"/>

        <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="@color/blue_active"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textView_state"
                app:layout_constraintTop_toTopOf="@+id/textView_state" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintEnd_toEndOf="@+id/button_Connect"/>


        <android.support.v7.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fanap_logo"
                android:id="@+id/appCompatImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_Connect"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.275"/>


        <android.support.v7.widget.CardView
                android:id="@+id/relativeMenu"
                android:visibility="visible"
                app:cardElevation="8dp"
                app:cardMaxElevation="8dp"
                app:cardCornerRadius="36dp"
                android:background="@drawable/menu_bottom_shape"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:weightSum="3"
                          android:gravity="center"
                          android:layout_gravity="center"
                          android:layout_centerInParent="true"
                          android:layout_height="wrap_content">


                <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp" android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                            app:backgroundTint="@color/blue_active"
                            android:id="@+id/fltBtnSearchMethod"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_search"
                            android:layout_width="wrap_content"
                            app:elevation="8dp"
                            app:fabCustomSize="48dp"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                    <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fltBtnSetToken"
                            app:backgroundTint="@color/purple_active"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_key"
                            app:fabCustomSize="48dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp" android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fltBtnFace"
                            app:backgroundTint="@color/green_active"
                            app:fabSize="mini"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_round_tag_faces_24px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:visibility="gone"-->
                <!--app:backgroundTint="@color/purple_active"-->
                <!--android:layout_centerInParent="true"-->
                <!--app:srcCompat="@drawable/ic_arrow_upward_black_24dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--app:elevation="8dp"-->
                <!--app:fabCustomSize="48dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="20dp"-->
                <!--app:layout_constraintStart_toStartOf="@+id/relativeMenu"-->
                <!--android:layout_marginEnd="8dp"-->
                <!--app:layout_constraintEnd_toStartOf="@+id/guideline4"-->
                <!--app:layout_constraintHorizontal_bias="0.115" android:layout_marginBottom="56dp"-->
                <!--app:layout_constraintBottom_toBottomOf="@+id/recyclerV_funcFrag"/>-->


        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="205dp"
                android:id="@+id/guideline4"/>

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/bottom_sheet_log"/>


    <include layout="@layout/search_log_bottom_sheet"/>

</android.support.design.widget.CoordinatorLayout>
