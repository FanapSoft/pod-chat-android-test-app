<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:background="@color/blue_bg_light"
        android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:background="@drawable/connect_button_shape"
                android:elevation="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/button_Connect"
                android:text="Connect"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/guideline3" tools:targetApi="lollipop"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView android:layout_width="61dp"
                  android:layout_height="26dp"
                  android:textSize="14sp"
                  android:text="SandBox"
                  android:gravity="center_vertical"
                  android:textColor="@color/colorAccent"
                  android:id="@+id/textView2"
                  app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
                  app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView" android:layout_marginEnd="48dp"
                  app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
                  app:layout_constraintVertical_bias="1.0"/>

        <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchCompat_sandBox"
                android:layout_height="27dp"
                android:layout_width="42dp"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/button_Connect" app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:text="connecting"
                android:id="@+id/textView_state"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView" android:layout_marginStart="12dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerV_funcFrag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                android:background="@color/blue_grey_inactive"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:id="@+id/guideline2"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.21"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:id="@+id/guideline3"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_begin="85dp"/>

        <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="@color/blue_active"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textView_state"
                app:layout_constraintTop_toTopOf="@+id/textView_state" app:layout_constraintVertical_bias="1.0"
                app:layout_constraintEnd_toEndOf="@+id/button_Connect"/>


        <android.support.v7.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fanap_logo"
                android:id="@+id/appCompatImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_Connect"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.275"/>
    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/bottom_sheet_log"/>

</android.support.design.widget.CoordinatorLayout>
