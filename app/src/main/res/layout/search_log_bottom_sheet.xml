<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet_search"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Search in methods"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etSearch"
                android:layout_margin="16dp"
                android:hint="Enter method name here"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:padding="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <Button
                    android:layout_margin="4dp"
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="40dp"
                    android:drawableStart="@drawable/ic_round_close_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Cancel"
                    android:textColor="@color/blue_inactive"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cancel_button_stroke"
            />

            <Button
                    android:layout_margin="4dp"
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="40dp"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/connect_button_shape"
            />


        </LinearLayout>



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>