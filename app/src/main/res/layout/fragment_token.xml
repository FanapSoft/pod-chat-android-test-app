<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".application.ui.util.TokenFragment">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
            android:padding="8dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/gery_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <EditText
                    android:id="@+id/etToken"
                    android:inputType="text"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:hint="Enter Sandbox token here"
                    android:textColor="@color/black"
                    android:layout_height="50dp"/>


            <Button
                    android:id="@+id/btnSetToken"
                    android:textColor="@color/white"
                    android:text="Set"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:background="@drawable/connect_button_shape"
                    android:layout_height="40dp"/>

            <View android:layout_width="match_parent" android:layout_height="8dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>