<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:minWidth">200dp</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="const_method">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/background_top_method_item</item>
    </style>

    <style name="progress_bar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/round_corner_progressbar</item>
    </style>

    <style name="log_button_style">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/rounded_rect</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/logs</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/blue_grey_active</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
